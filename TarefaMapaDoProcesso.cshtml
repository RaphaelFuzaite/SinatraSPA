@{
    ViewSetup.SetDataFetcher("Projeto", "MapaDoProcesso");
    ViewSetup.SetTargetArea("Content");
    ViewSetup.SetViewKey("/Projeto");
    ViewSetup.SetViewModel("~/js/ViewModels/TarefaMapaDoProcessoViewModel.js");
}

<div id="tarefa-mapa"  class="map-area">
    <div id="map-source" data-bind="text: Projeto"></div>
    <!--ko foreach: { data: Tarefas, afterRender: IsRendered } -->
        <div class="tarefa" data-bind="attr: { 'id': $data.Id }, css: { 'selected': $data.Id == Sinatra.Utils.Details('#/Tarefa').id }">
            <!--ko text: $data.NomeOrdenado --><!--/ko-->
        </div>
    <!--/ko-->
</div>

<style type="text/css">

    #tarefa-mapa {
        position: relative;
        width: 100%;
        height: 1000px;
        background-color: #CCC;
        text-align: center;
        position: relative;
        top: 0;
        left: 0;
        padding: 30px;
    }
        #tarefa-mapa #map-source {
            border: 2px solid #000;
            border-radius: 4px;
            background-color: #FFF;
            padding: 8px 15px;
            margin-bottom: 50px;
            text-align: center;
            font-size: 16px;
            width: 150px;
        }

        #tarefa-mapa .tarefa {
            position: absolute;
            border-radius: 4px;
            background-color: #FFF;
            text-align: center;
            font-size: 16px;
        }

            #tarefa-mapa .tarefa.selected {
                border-color: #b30000;
                color: #b30000;
            }
</style>